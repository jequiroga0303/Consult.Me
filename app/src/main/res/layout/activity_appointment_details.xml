<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_gradient_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    tools:context=".AppointmentDetailsActivity">

    <ImageButton
        android:id="@+id/btnBackFromDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendar Cita"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/btnBackFromDetails"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/appointment_details_footer"
        android:layout_below="@id/tvScreenTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor/a:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/doctor_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dra. Alejandra Guzmán"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDoctorSpecialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialista en diagnóstico y tratamiento de padecimientos comunes"
                    android:textColor="@color/text_medium"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:text="Estudios: " />
                <TextView
                    android:id="@+id/tvDoctorStudies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Médico Cirujano en la UANL"
                    android:textColor="@color/text_medium"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:text="Años Ejercidos: " />
                <TextView
                    android:id="@+id/tvDoctorExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 años"
                    android:textColor="@color/text_medium"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona Fecha y Hora:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/date_time_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners_background"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Consulta"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presiona para seleccionar la fecha"
                    android:gravity="center"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/ios_blue"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora de Consulta"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:id="@+id/tvSelectedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presiona para seleccionar la hora"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textColor="@color/ios_blue"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/appointment_details_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corners_background"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de la Cita:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetailsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Fecha: 20 de Abril del 2025"
            android:textColor="@color/text_medium" />

        <TextView
            android:id="@+id/tvDetailsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Hora: 9:40 am (Duración máx.: 45 min)"
            android:textColor="@color/text_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Consultorio: Virtual"
            android:textColor="@color/text_medium" />

        <TextView
            android:id="@+id/tvAppointmentCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Cobro por cita: 200 PESOS MEXICANOS"
            android:textColor="@color/text_medium"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Agendar!"
            android:backgroundTint="@color/ios_blue"
            android:textColor="@color/white"
            android:minHeight="56dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</RelativeLayout>