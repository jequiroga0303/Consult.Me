<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_gradient_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp">

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Perfil de usuario"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/top_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/btn_profile"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consult.Me"
            android:textSize="18sp"
            android:textColor="@color/text_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/banner_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/top_header_section"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_consultme"
                android:contentDescription="Banner de Consultas" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorías de Consulta"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/banner_card"
        android:layout_marginBottom="12dp"/>

    <GridLayout
        android:id="@+id/categories_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_below="@id/categories_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_medical_guidance"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="Guianza Médica"
            android:drawableTop="@drawable/ic_medicina"
            android:backgroundTint="@color/white"
            android:textColor="@color/text_dark"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:minHeight="100dp"
            android:textStyle="bold"
            android:elevation="2dp"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <Button
            android:id="@+id/btn_nutrition"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="Nutrición"
            android:drawableTop="@drawable/ic_nutricion"
            android:backgroundTint="@color/white"
            android:textColor="@color/text_dark"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:minHeight="100dp"
            android:textStyle="bold"
            android:elevation="2dp"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <Button
            android:id="@+id/btn_psychology"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="Psicología"
            android:drawableTop="@drawable/ic_psicologo"
            android:backgroundTint="@color/white"
            android:textColor="@color/text_dark"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:minHeight="100dp"
            android:textStyle="bold"
            android:elevation="2dp"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <Button
            android:id="@+id/btn_coaching"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="Coaching"
            android:drawableTop="@drawable/ic_coach"
            android:backgroundTint="@color/white"
            android:textColor="@color/text_dark"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:minHeight="100dp"
            android:textStyle="bold"
            android:elevation="2dp"
            android:drawablePadding="8dp"
            style="@style/Widget.Material3.Button.TextButton"/>

    </GridLayout>

    <TextView
        android:id="@+id/my_consultations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Consultas Agendadas"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/categories_grid"
        android:layout_marginBottom="8dp"/>

    <ScrollView
        android:id="@+id/consultations_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners_background"
        android:padding="8dp"
        android:layout_below="@id/my_consultations_title"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/consultations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay consultas agendadas por el momento."
                android:gravity="center"
                android:textColor="@color/text_medium"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>